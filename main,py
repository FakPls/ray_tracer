import sys
import pygame as pg
import numpy as np
from ray import ray
from pygame.locals import *


pg.init()
 
fps = 60
fpsClock = pg.time.Clock()
 
width, height = 640, 480
screen = pg.display.set_mode((width, height))

rays = []

for i in range(width):
  for j in range(height):
    rays.append(ray((i, j, 0), (0, 0, 1)))


# Game loop.
while True:
  screen.fill((0, 0, 0))
  
  for event in pg.event.get():
    if event.type == QUIT:
      pg.quit()
      sys.exit()
  
